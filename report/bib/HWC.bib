file = {:home/parra358/Documents/Articles/Forecasting/Modeling and Forecasting Daily Electricity Load Curves A Hybrid Approach.pdf:pdf},
issn = {01621459},
journal = {Journal of the American Statistical Association},
keywords = {Correlation dimension,Dimension reduction,Electricity loads,Generalized additive models,Singular value decomposition},
number = {501},
pages = {7--21},
title = {{Modeling and forecasting daily electricity load curves: A hybrid approach}},
volume = {108},
year = {2013}
}
