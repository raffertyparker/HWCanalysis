journal = {Energy and Buildings},
keywords = {Demand response,Demand side management,Domestic appliances,Domestic electricity use,Energy demand modelling,Flexible demand,Occupancy,Time-use},
number = {10},
pages = {1878--1887},
publisher = {Elsevier B.V.},
title = {{Domestic electricity use: A high-resolution energy demand model}},
